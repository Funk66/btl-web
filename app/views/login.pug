extends layout.pug

block content
  .container.center
    .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      .panel.panel-default.login
        .panel-heading
          .bitelio bitelio

        .panel-body
          if (danger && danger.length > 0)
            .alert.alert-danger.alert-dismissible
              button.close(type='button' data-dismiss='alert' aria-label='Close')
                span(aria-hidden='true') &times;
              | #{danger}
          if (success && success.length > 0)
            .alert.alert-success.alert-dismissible
              button.close(type='button' data-dismiss='alert' aria-label='Close')
                span(aria-hidden='true') &times;
              | #{success}

          form(action='/login' method='post' name='credentials')
            .form-group
              input.form-control(type='email' name='username' placeholder='User' required)
            .form-group
              input.form-control(type='password' name='password' placeholder='Password' required)
            button.btn.btn-primary.pull-right(formaction='login' type='submit') Log in
            button.btn.btn-warning.pull-left(formaction='signup' type='submit') Sign up
