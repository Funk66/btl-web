extends layout.pug

block content
  .container.center
    .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      .panel.panel-default.login
        .panel-heading
          .bitelio bitelio

        .panel-body
          if message.length > 0
            .alert.alert-danger= message

          form(action='/login' method='post')
            .form-group
              input.form-control(type='email' name='username' placeholder='Username' required)
            .form-group
              input.form-control(type='password' name='password' placeholder='Password' required)
            button.btn.btn-primary.pull-right(type='submit') Log in
