extends layout

block content
  .container
    .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h4 Settings

        .panel-body
          h4 Change password
          form(action='/login', method='post')
            .form-group
              input.form-control(type='text', placeholder='New password')
            .form-group
              input.form-control(type='password', name='password', placeholder='Repeat password')
            button.btn.btn-primary.pull-right(type='submit') Save


